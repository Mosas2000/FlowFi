{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "mocha"
        ]
    },
    "include": [
        "./scripts",
        "./test",
        "./typechain-types",
        "./hardhat.config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}